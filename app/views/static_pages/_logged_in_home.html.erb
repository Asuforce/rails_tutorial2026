      <div class="card-body">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>

        <section class="stats">
          <%= render 'shared/stats' %>
        </section>

        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </div>
    </div>
  </aside>

  <div class="col-md-8">
    <section class="micropost_feed">
      <h3 class="h4 mb-3 fw-bold">Micropost Feed</h3>
      <div class="card shadow-sm border-0">
