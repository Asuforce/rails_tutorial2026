<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </h4>
    <hr>
    <ul class="mb-0">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
