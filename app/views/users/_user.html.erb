<div class="col">
  <div class="card h-100 shadow-sm border-0 hover-shadow transition">
    <div class="card-body text-center p-4">
      <div class="mb-3">
        <div class="rounded-circle shadow-sm border border-2 border-white d-inline-block overflow-hidden">
          <%= gravatar_for user, size: 80 %>
        </div>
      </div>
      <h5 class="card-title fw-bold mb-3"><%= user.name %></h5>
      <%= link_to 'View Profile', user, class: "btn btn-outline-primary btn-sm rounded-pill px-4" %>
      <% if current_user.admin? && !current_user?(user) %>
        <%= link_to 'Delete User', user, data: { "turbo-method": :delete,
                                                 turbo_confirm: "You sure?" },
                                                 class: "btn btn-outline-danger btn-sm rounded-pill px-4 ms-2" %>
      <% end %>
    </div>
  </div>
</div>
