<%# app/views/users/_form.html.erb %>
<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Your Name" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "email@example.com" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit yield(:button_text), class: "btn btn-primary #{yield(:button_class)} mt-3" %>
  </div>
<% end %>
